<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:id="@+id/LLmain" android:elevation="50dp"
              android:background="#eeeeee">
    <androidx.appcompat.widget.Toolbar
            android:id="@+id/post_option_tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/whiteColor"

            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/quantum_black_100" app:title="Post Option"/>

    <TextView
            android:text="Going Somewhere?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="30sp"
            android:paddingStart="10dp" android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_black" android:paddingTop="30dp" android:includeFontPadding="false"
            android:paddingBottom="20dp"/>
    <include layout="@layout/booking_request_card"/>
    <androidx.cardview.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/custom_bg"
            android:id="@+id/card_img" android:minHeight="200dp" android:layout_marginBottom="20dp"
    >

        <!-- Card contents. -->
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/cardLL" android:layout_weight="1"
                    android:background="#ffffff">
                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/imageView"
                        android:layout_weight="1" android:layout_margin="10dp" android:layout_gravity="top|left"
                        android:paddingStart="10dp" android:contentDescription="TODO"
                        android:background="@drawable/passenger"/>
                <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView
                            android:text="Post a trip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView"
                            android:textSize="25sp" android:textColor="@color/colorSecondary"
                            android:fontFamily="@font/roboto_black" android:paddingStart="10dp"
                            android:foregroundGravity="left" android:gravity="left"/>
                    <ImageView
                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:layout_gravity="center|end" android:layout_height="30dp"
                            android:layout_width="30dp" android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true" android:contentDescription="Card Arrow"
                            android:background="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                </RelativeLayout>
                <TextView
                        android:text="You're a driver with empty seats that you're looking to fill"
                        android:layout_width="364dp"
                        android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_weight="1"
                        android:textSize="20sp" android:paddingTop="10dp" android:paddingStart="10dp"
                />
            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/custom_bg"
            android:id="@+id/card_img2" android:minHeight="200dp">

        <!-- Card contents. -->
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/FrameL2">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/cardLL2">
                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/imageView2"
                        android:layout_weight="1" android:layout_margin="10dp" android:layout_gravity="top|left"
                        android:paddingLeft="10dp" android:contentDescription="TODO"
                        android:background="@drawable/driver"/>
                <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/RL2">
                    <TextView
                            android:text="Post a request"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/PostRequestTxt"
                            android:textSize="25sp" android:textColor="@color/colorAccent"
                            android:fontFamily="@font/roboto_black" android:paddingStart="10dp"
                            android:foregroundGravity="left" android:gravity="left"
                            android:layout_marginEnd="170dp"/>
                    <ImageView
                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                            android:layout_gravity="center|end" android:layout_height="30dp"
                            android:layout_width="30dp" android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true" android:contentDescription="Card Arrow"
                            android:background="@drawable/ic_keyboard_arrow_right_black_24dp"/>
                </RelativeLayout>
                <TextView
                        android:text="You're looking for a shared ride and want to get notified once it get posted."
                        android:layout_width="368dp"
                        android:layout_height="wrap_content" android:id="@+id/Desc2" android:layout_weight="1"
                        android:textSize="20sp" android:paddingTop="10dp" android:paddingStart="10dp"/>
            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>
