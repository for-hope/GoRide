<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical"
              android:background="@android:color/white" android:layout_marginTop="5dp">

    <View
            android:id="@+id/divider9"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="5dp"
            android:paddingTop="10dp" android:paddingBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/chat_user_pfp"
                    android:layout_width="60dp"
                    android:src="@mipmap/ic_launcher_round"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000" android:layout_weight="0"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center" android:layout_height="60dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="0" android:gravity="center"
                    android:layout_gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginBottom="5dp">
                    <TextView
                            android:text="@string/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/chat_username"
                            android:textSize="16sp" android:textStyle="bold"
                            android:textColor="@color/quantum_black_100" android:layout_weight="1"/>
                    <TextView
                            android:text="@string/dummy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/chat_timestamp"
                            android:layout_weight="1"
                            android:textSize="14sp" android:layout_gravity="end" android:gravity="end"
                           />
                </LinearLayout>
                <TextView
                        android:text="@string/messages_goes_here"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/chat_last_msg"
                        android:textSize="16sp" android:gravity="start"
                        android:textColor="@color/quantum_grey800" android:maxLines="1"/>
            </LinearLayout>

    </LinearLayout>
    <View
            android:id="@+id/divider17"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
    />
</LinearLayout>
