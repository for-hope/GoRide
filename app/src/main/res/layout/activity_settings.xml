<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/places_autocomplete_fullscreen_background"
              android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/settings_tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/whiteColor"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Settings"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/modify_profile_setting"
            android:elevation="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/Widget.MaterialComponents.CardView"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/custom_bg">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_layout"
                android:background="@android:color/white"
                android:paddingTop="10dp"
        >
            <TextView
                    android:text="Modify Profile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/settings_modify"
                    android:drawablePadding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp" android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_person_gray_24dp"/>


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:id="@+id/ic_arrow"
                    android:contentDescription="@string/arrow_ic" android:layout_gravity="end"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notification_settings"
            android:elevation="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/Widget.MaterialComponents.CardView"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/custom_bg">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notif_layout"
                android:background="@android:color/white"
                android:paddingTop="10dp"
        >
            <TextView
                    android:text="All Notifications"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_notifications"
                    android:drawablePadding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp" android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_notifications_active_grey_24dp"/>


            <Switch
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content" android:id="@+id/notif_switch_setting"
                    android:layout_weight="0"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/privacy_setting"
            android:elevation="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/Widget.MaterialComponents.CardView"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/custom_bg">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/privacy_layout"
                android:background="@android:color/white"
                android:paddingTop="10dp"
        >
            <TextView
                    android:text="Privacy and Policies"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/setting_privacy"
                    android:drawablePadding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp" android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_remove_circle_black_24dp"/>


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:id="@+id/ic_arrow2"
                    android:contentDescription="@string/arrow_ic" android:layout_gravity="end"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/about_setting"
            android:elevation="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/Widget.MaterialComponents.CardView"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/custom_bg">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/about_layout"
                android:background="@android:color/white"
                android:paddingTop="10dp"
        >
            <TextView
                    android:text="About"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/settings_about"
                    android:drawablePadding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp" android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_info_gray_24dp"/>


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:id="@+id/ic_arrow3"
                    android:contentDescription="@string/arrow_ic" android:layout_gravity="end"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/terms_setting"
            android:elevation="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/Widget.MaterialComponents.CardView"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/custom_bg">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/terms_layout"
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
            <TextView
                    android:text="@string/terms_of_service"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/terms_textview"
                    android:drawablePadding="10dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_email_gray_24dp"/>


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:id="@+id/ic_arrow4"
                    android:contentDescription="@string/arrow_ic" android:layout_gravity="end"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <View
            android:id="@+id/divider19"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_marginBottom="30dp" android:layout_marginTop="30dp"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logout_setting"
            android:elevation="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/Widget.MaterialComponents.CardView"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/custom_bg">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/logout_layout"
                android:background="@android:color/white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
            <TextView
                    android:text="Logout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/logout_text"
                    android:drawablePadding="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center|start"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_exit_to_app_blackk_24dp"/>


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"
                    android:id="@+id/ic_arrow5"
                    android:contentDescription="@string/arrow_ic" android:layout_gravity="end"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>
