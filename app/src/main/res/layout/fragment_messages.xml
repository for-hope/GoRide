<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:visibility="visible"
             android:id="@+id/msg_framelayout">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:gravity="center" android:id="@+id/empty_list_msg"
            android:visibility="visible">
        <ImageView
                android:layout_width="120dp"
                android:id="@+id/driver_catImg" app:srcCompat="@drawable/ic_speaker_notes_off_black_24dp"
                android:layout_height="120dp"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" android:gravity="center" android:layout_marginTop="50dp"
                android:layout_marginStart="50dp" android:layout_marginEnd="50dp" android:text="You have no messages!"/>
    </LinearLayout>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:elevation="1dp" android:visibility="visible">
        <ProgressBar android:indeterminate="true"
                     android:layout_centerInParent="true"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"

                     android:id="@+id/pb_notif" android:visibility="gone"
                     android:elevation="@dimen/design_touchable_tab_text_size_2line"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#0a000000"
                android:id="@+id/greyout_notif"
                android:visibility="gone" android:elevation="1dp">
        </LinearLayout>
        <ScrollView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/scrolling"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#eeeeee" android:visibility="gone">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:id="@+id/scroll_layout">

                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/notif_list_res_view"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</FrameLayout>