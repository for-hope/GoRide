<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" android:id="@+id/main_notif_layout"
                                   android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
                                   android:focusable="true"
                                   android:foreground="@drawable/custom_bg"
                                   android:clickable="false">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:paddingTop="10dp" android:paddingBottom="10dp"
            android:id="@+id/notif_main_ll" android:paddingEnd="5dp" android:paddingStart="5dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_error_outline_gray_50dp"
                android:id="@+id/notif_ic" android:contentDescription="@string/dummy"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/first_line_card"
                    android:paddingBottom="5dp">
                <TextView
                        android:text="@string/day_mon_01_at_01am"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/notif_date"
                        android:textColor="#989898"
                        android:textSize="16sp" android:layout_weight="1"
                />
                <TextView
                        android:text="@string/origin_to_destination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/notif_origin"
                        android:textColor="#989898"
                        android:textSize="16sp" android:layout_weight="1"
                        android:layout_marginStart="15dp"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/second_line2_card">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/first_line"
                >
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/notif_user_pfp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@mipmap/ic_launcher_round"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#FF000000" android:layout_weight="0"
                            android:layout_marginStart="20dp" android:visibility="gone"/>
                    <TextView
                            android:text="@string/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/notif_username"
                            android:textColor="@color/colorSecondary"
                            android:textSize="18sp"
                            android:textStyle="bold" android:layout_weight="0"
                            android:layout_marginStart="5dp"
                            android:gravity="center" android:layout_gravity="center"
                            android:visibility="gone"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/notif_desc1"
                            android:layout_weight="1" android:textSize="18sp"
                            android:text="@string/wants_to_join_your_ride"
                            android:singleLine="false"
                            android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/horz_second_line"
                        android:visibility="gone">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/notif_desc2"
                             android:textSize="18sp"
                            android:text="@string/do_you_wanna_accept_them_into_your_trip"
                            android:layout_marginStart="20dp" android:singleLine="false"
                    />
                </LinearLayout>
            </LinearLayout>
            <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginBottom="10dp" android:layout_marginTop="5dp"/>
            <TextView
                    android:text="@string/may_23_at_16_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/timestamp_notif"
                    android:textColor="@color/colorAccent" android:textSize="15sp"/>


        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>



