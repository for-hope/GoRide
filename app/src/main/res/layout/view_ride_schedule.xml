<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/date_time_container" android:gravity="center" android:paddingStart="5dp"
        android:paddingEnd="5dp">
    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/add_datebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:primaryColor="@color/colorSecondary"
            app:labelText="Departure date"
            app:helperTextColor="@color/colorAccent"
            app:iconSignifier="@drawable/ic_date_range_black_24dp"
            app:enabled="true"
            android:focusable="false"
            android:clickable="false"
            android:soundEffectsEnabled="false" android:layout_gravity="start" android:layout_weight="1">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/search_date_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:focusable="false"
                android:clickable="false"
                android:soundEffectsEnabled="false"/>


    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
    <TextView
            android:text="@string/at"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/at_TextView"
            android:layout_weight="0"
            android:textStyle="bold"
            android:gravity="center" android:paddingStart="10dp" android:paddingEnd="10dp"
            android:layout_gravity="center"/>
    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
            android:id="@+id/add_timebtn"
            android:layout_width="wrap_content"
            app:primaryColor="@color/colorSecondary"
            app:labelText="Time"
            app:helperTextColor="@color/colorAccent"
            app:iconSignifier="@drawable/ic_access_time_black_24dp"
            android:layout_height="match_parent" android:layout_gravity="end" android:layout_weight="1">

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/editText_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"/>


    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
</LinearLayout>