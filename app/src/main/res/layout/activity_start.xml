<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@android:color/holo_blue_dark">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:paddingStart="10dp" android:paddingEnd="10dp">

        <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top" android:orientation="horizontal">
            <TextView
                    android:text="@string/AppTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/AppTitle"
                    android:textColor="@android:color/white" android:textSize="30sp"
                    android:fontFamily="@font/poppins_bold"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/layout3" android:orientation="vertical" android:id="@+id/LL2"
                android:paddingBottom="70dp" android:paddingTop="70dp">
            <TextView
                    android:text="GoRide is the best App for elders to travel together in Algeria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/start_desc"
                    android:textColor="@android:color/white" android:textSize="25sp"
                    android:fontFamily="@font/alef"
                    android:layout_weight="1" android:gravity="left|center"
                    android:paddingBottom="60dp"/>
            <TextView
                    android:text="Try now and make your life easier..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/start_desc2"
                    android:textColor="@android:color/white" android:textSize="25sp"
                    android:fontFamily="@font/alef"
                    android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_below="@+id/LL2" android:orientation="vertical" android:id="@+id/LL3"
                android:gravity="center|start">

            <Button
                    android:text="Continue with Google"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button3"
                    android:background="@color/colorAccent" android:textColor="@android:color/white"
                    android:layout_marginBottom="10dp"/>
            <Button
                    android:text="Continue with Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button4"
                    android:background="@color/colorAccent" android:textColor="@android:color/white"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>