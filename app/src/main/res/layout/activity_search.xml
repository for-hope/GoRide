<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"

            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@color/colorAccent" android:layout_weight="0"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/SearchLLayout">
        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/textbox_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryColor="@color/colorAccent"
                app:labelText="From"
                app:helperTextColor="@color/colorAccent"
                app:iconSignifier="@drawable/ic_location_on_orange_24dp"
                app:endIcon="@drawable/ic_clear_circle_black_24dp"
                app:enabled="true"
                android:focusable="false"
                android:clickable="false"
                android:soundEffectsEnabled="false" android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/editText_from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="false"
                    android:soundEffectsEnabled="false"/>


        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
        <ImageView
                android:layout_width="40sp"
                android:layout_height="40sp" app:srcCompat="@drawable/ic_swap_vertical_circle_blue_24dp"
                android:id="@+id/imageView9" android:background="@drawable/ic_swap_vertical_circle_blue_24dp"
                android:layout_gravity="center"/>
        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/textbox_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryColor="@color/colorSecondary"
                app:labelText="To"
                app:helperTextColor="@color/colorAccent"
                app:iconSignifier="@drawable/ic_location_on_orange_24dp"
                app:endIcon="@drawable/ic_clear_circle_black_24dp"
                app:enabled="true"
                android:focusable="false"
                android:clickable="false"
                android:soundEffectsEnabled="false" android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/editText_To"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="false"
                    android:soundEffectsEnabled="false"/>


        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
        <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/add_datebtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:primaryColor="@color/colorSecondary"
                app:labelText="Departure date*"
                app:helperTextColor="@color/colorAccent"
                app:iconSignifier="@drawable/ic_date_range_black_24dp"
                app:enabled="true"
                android:focusable="false"
                android:clickable="false"
                android:soundEffectsEnabled="false" android:layout_marginEnd="20dp" android:layout_marginStart="20dp"
                android:layout_marginTop="20dp">

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/editText_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="false"
                    android:soundEffectsEnabled="false"/>


        </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>
        <com.google.android.material.button.MaterialButton
                android:id="@+id/search_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search" android:layout_marginEnd="20dp" android:layout_marginStart="20dp"
                android:padding="15dp" android:layout_marginTop="25dp"/>

    </LinearLayout>
    <fragment
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/mapView"
            tools:context=".SearchTripActivity"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>
</LinearLayout>
