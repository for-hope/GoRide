<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/request_to_book_card"
            app:cardCornerRadius="20dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="@drawable/custom_bg"
            android:background="@drawable/custom_border_round">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:padding="20dp"
                android:background="@drawable/custom_border_round" android:id="@+id/requestbook_layout">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_credit_card_black_50dp"
                    android:id="@+id/imageView4" android:contentDescription="@string/credit_card"/>
            <TextView
                    android:text="@string/request_to_book"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/cardetails_price_pref3"
                    android:textSize="18sp"
                    android:textColor="@android:color/black" android:fontFamily="@font/roboto_black"
                    android:layout_marginBottom="20dp"/>
            <TextView
                    android:text="@string/you_approve_or_decline_passengers_manually"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/text_other5" android:textSize="16sp"
                    android:textColor="@color/btnBlack" android:textStyle="bold"
                    android:layout_marginBottom="10dp"/>
            <TextView
                    android:text="@string/you_control_on_who_gets_in_your_car"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/recommanded_price2"
                    android:layout_weight="1" android:textColor="#4c4c4c" android:textSize="16sp"
                    android:paddingTop="5dp" android:textStyle="italic"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>