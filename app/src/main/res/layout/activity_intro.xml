<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:background="@color/quantum_googblue800">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:orientation="vertical"
                    android:background="@color/quantum_googblue800"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
        <TextView
                android:text="@string/AppTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/appTitle2"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center" android:layout_below="@id/ic_logo2"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/ic_logo2"
                android:contentDescription="@string/applogo"
                android:layout_alignParentTop="false"
                android:layout_marginTop="50dp"
                android:layout_centerInParent="false" android:layout_centerVertical="false"
                android:layout_centerHorizontal="true"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_old_prson"
                android:id="@+id/ic_old_man"

                android:contentDescription="@string/applogo"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="false"
                android:layout_centerInParent="false" android:layout_alignParentTop="false"
                android:layout_below="@+id/appTitle2" android:layout_marginStart="20dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/app_desc"
                android:textColor="@android:color/white"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/app_description"

                android:textSize="20sp"
                android:gravity="center"
                android:layout_below="@+id/appTitle2"
                android:layout_above="@id/app_desc2"
                android:layout_toEndOf="@+id/ic_old_man"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/app_desc2"
                android:textColor="@android:color/white"
                android:padding="20dp"
                android:text="You can sign up using email amd password or using Google Signin."
                android:textSize="18sp" android:gravity="center" android:layout_below="@+id/ic_old_man"/>
        <Button
                android:text="@string/sign_up_using_email"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" android:id="@+id/button" android:layout_below="@+id/app_desc2"
                android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
    </RelativeLayout>
</ScrollView>