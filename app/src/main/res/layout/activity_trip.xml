<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <com.google.android.material.appbar.AppBarLayout android:layout_width="match_parent"
                                                     android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/trip_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/whiteColor"
                android:elevation="6dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="Trip"/>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical" android:id="@+id/trip_layout"
                      android:background="@color/quantum_grey200">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="0" android:id="@+id/card_trip_layout"
                    android:background="@android:color/white" android:layout_marginBottom="20dp">
                <TextView
                        android:text="Day, Mon 01 at 01:00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/trip_ac_date"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" android:textStyle="bold" android:layout_weight="1"
                        android:layout_marginStart="10dp" android:paddingBottom="8dp" android:paddingTop="5dp"/>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/orgin_des_layout"
                        android:paddingBottom="10dp">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/horz_second_line"
                    >
                        <View
                                android:id="@+id/divider"
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorSecondary"
                                android:layout_weight="0"/>
                        <TextView
                                android:text="Origin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/trip_ac_origin"
                                android:textColor="@color/colorSecondary"
                                android:textSize="18sp" android:textStyle="bold" android:layout_weight="0"
                                android:paddingStart="10dp" android:paddingBottom="10dp" android:paddingTop="10dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/trip_desc1_card"
                                android:layout_weight="1" android:textSize="16sp" android:text="Full Address"
                                android:layout_marginStart="20dp" android:paddingBottom="10dp"
                                android:paddingTop="10dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:id="@+id/horz_second2_line"
                    >
                        <View
                                android:id="@+id/divider2"
                                android:layout_width="5dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorSecondary"
                                android:layout_weight="0"/>
                        <TextView
                                android:text="Destination"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/trip_ac_des"
                                android:textColor="@color/colorSecondary"
                                android:textSize="18sp" android:textStyle="bold" android:layout_weight="0"
                                android:paddingStart="10dp" android:paddingBottom="10dp" android:paddingTop="10dp"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/trip_desc2_card"
                                android:layout_weight="1" android:textSize="16sp" android:text="Full Address"
                                android:layout_marginStart="20dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1"
                        android:id="@+id/seats_price_layout">
                    <TextView
                            android:text="3 seats left"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" android:id="@+id/trip_ac_seats"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" android:textStyle="bold" android:layout_weight="1"
                            android:gravity="center"
                            android:background="@drawable/border" android:paddingBottom="10dp"
                            android:paddingTop="10dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/trip_ac_price"
                            android:textColor="@color/quantum_googgreen600"
                            android:textSize="18sp" android:textStyle="bold" android:layout_weight="1"
                            android:text="20 DZD"
                            android:gravity="center" android:background="@drawable/border" android:paddingBottom="10dp"
                            android:paddingTop="10dp"/>
                </LinearLayout>
                <TextView
                        android:text='"Description"'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/trip_ac_desc"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" android:layout_weight="1"
                        android:layout_marginStart="10dp" android:paddingBottom="15dp"
                        android:paddingTop="15dp" android:paddingStart="5dp" android:fontFamily="@font/roboto_black"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="0" android:id="@+id/booked_layout"
                    android:background="@android:color/white" android:layout_marginBottom="20dp">
                <TextView
                        android:text="Booked:"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/trip_ac_booked"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" android:textStyle="bold" android:layout_weight="3"
                        android:layout_marginStart="10dp" android:paddingBottom="10dp" android:paddingTop="10dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1"
                >
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="0" android:id="@+id/profile_card_view"
                    android:elevation="4dp" android:layout_marginBottom="20dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="0"
                        android:background="@android:color/white" android:paddingTop="10dp"
                        android:paddingBottom="10dp" android:id="@+id/license_plate">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/trip__ac_user_pfp"
                            android:layout_width="100dp"
                            android:layout_height="90dp"
                            android:src="@mipmap/ic_launcher_round"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#FF000000" android:layout_weight="0" android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp" android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1"
                            android:id="@+id/profile_layout">
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="1">
                            <TextView
                                    android:text="FirstName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" android:id="@+id/trip_ac_user_name"
                                    android:textColor="@android:color/black"
                                    android:textSize="20sp" android:textStyle="bold" android:layout_weight="0"
                                    android:gravity="top|start"
                                    android:paddingBottom="5dp"
                                    android:paddingTop="5dp" android:paddingStart="15dp"/>
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" android:layout_weight="1"
                                    android:paddingStart="10dp">
                                <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" android:layout_weight="1">
                                    <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_weight="0">
                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_person_pin_circle_black_24dp"
                                                android:id="@+id/peopel_ic" android:layout_weight="0"/>
                                        <TextView
                                                android:text="0 people driven"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/trip_ac_people_drv"
                                                android:textColor="@android:color/black"
                                                android:textSize="18sp"
                                                android:layout_weight="0"
                                                android:layout_marginStart="10dp"
                                                android:fontFamily="sans-serif"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" android:layout_weight="1">
                                    <LinearLayout
                                            android:orientation="horizontal"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" android:layout_weight="0">
                                        <ImageView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                app:srcCompat="@drawable/ic_star_blue_24dp"
                                                android:id="@+id/star_ic" android:layout_weight="0"/>
                                        <TextView
                                                android:text="0.0 * 0 reviews"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/trip_ac_rating_review"
                                                android:textColor="@android:color/black"
                                                android:textSize="18sp"
                                                android:layout_weight="0"
                                                android:layout_marginStart="10dp"
                                        />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" android:id="@+id/ic_arrow"
                            android:layout_weight="0" android:foregroundGravity="center"
                            android:layout_gravity="center"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="0"
                    android:background="@android:color/white" android:paddingStart="10dp" android:id="@+id/pref_layout"
                    android:paddingBottom="10dp">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/trip_ac_car_photo" android:paddingEnd="10dp"
                            android:paddingStart="5dp" android:minWidth="150dp"
                            android:scaleType="center" android:src="@drawable/ic_directions_car_150dp"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="1">
                        <TextView
                                android:text="Car Model"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/trip_ac_car_model"
                                android:textColor="@android:color/black"
                                android:textSize="18sp" android:textStyle="bold" android:layout_weight="0"
                                android:gravity="top|start"
                                android:paddingStart="5dp" android:paddingBottom="5dp" android:paddingTop="5dp"/>
                        <TextView
                                android:text="Type, Color, Year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:id="@+id/trip_ac_type_color_year"
                                android:textColor="@color/browser_actions_title_color"
                                android:textSize="16sp" android:layout_weight="0"
                                android:gravity="top|start"
                                android:paddingStart="5dp" android:paddingBottom="5dp" android:paddingTop="5dp"/>
                        <TextView
                                android:text="0123456789"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:id="@+id/trip_ac_lisence"
                                android:textColor="@color/browser_actions_title_color"
                                android:textSize="17sp" android:layout_weight="0"
                                android:gravity="top|start"
                                android:paddingStart="5dp" android:textStyle="bold" android:paddingBottom="5dp"
                                android:paddingTop="5dp"/>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="1"
                                android:id="@+id/luaggage_layout">
                            <FrameLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:layout_weight="0"
                                    android:paddingStart="5dp"
                                    android:paddingEnd="5dp" android:foregroundGravity="center"
                                    android:layout_gravity="center"
                                    android:id="@+id/luggage_layout">
                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:srcCompat="@drawable/ic_work_black_24dp"
                                        android:id="@+id/imageView10" android:layout_weight="0"
                                />
                                <TextView
                                        android:text="M"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" android:id="@+id/trip_ac_luggage"
                                        android:textColor="@color/backgroundColor"
                                        android:textSize="12sp" android:layout_weight="1"
                                        android:textStyle="bold" android:gravity="center"
                                        android:foregroundGravity="center"
                                        android:layout_gravity="center"/>
                            </FrameLayout>
                            <TextView
                                    android:text="Small Luggage"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/trip_ac_luggage_text"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp" android:textStyle="bold" android:layout_weight="1"
                                    android:layout_marginStart="10dp"
                                    android:layout_gravity="center" android:paddingBottom="5dp"
                                    android:paddingTop="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="1"
                                android:id="@+id/smoke_layout">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_smoke_free_black_24dp"
                                    android:id="@+id/ic_smoke" android:layout_weight="0"
                                    android:layout_gravity="center" android:paddingStart="5dp"
                                    android:paddingEnd="5dp"/>
                            <TextView
                                    android:text="No Smoking Inside"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/trip_ac_smokeprf"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp" android:textStyle="bold" android:layout_weight="1"
                                    android:layout_marginStart="10dp"
                                    android:layout_gravity="center" android:paddingBottom="5dp"
                                    android:paddingTop="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="1"
                                android:id="@+id/pets_layout">
                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_pets_black_24dp"
                                    android:id="@+id/ic_pet" android:layout_weight="0"
                                    android:layout_gravity="center" android:paddingStart="5dp"
                                    android:paddingEnd="5dp"/>
                            <TextView
                                    android:text="Pets"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/trip_ac_pets_pref"
                                    android:textColor="@android:color/black"
                                    android:textSize="17sp" android:textStyle="bold" android:layout_weight="1"
                                    android:layout_marginStart="10dp"
                                    android:layout_gravity="center" android:paddingBottom="5dp"
                                    android:paddingTop="5dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginTop="20dp" android:layout_weight="0"
                    android:background="@android:color/white">

                <com.google.android.gms.maps.MapView
                        android:layout_width="match_parent"
                        android:layout_height="200dp" android:id="@+id/trip_ac_map"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <Button

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="INSTANT BOOK" android:id="@+id/trip_ac_submit_btn"
            android:padding="0dp"
            android:layout_marginLeft="-5dip"
            android:layout_marginRight="-5dip"
            android:layout_marginTop="-10dip"
            android:layout_marginBottom="-6dip"

            android:textSize="18sp" app:icon="@drawable/ic_flash_on_yellow_24dp_true"

            android:layout_gravity="bottom" android:foregroundGravity="bottom" app:iconPadding="20dp"
            app:iconGravity="textStart"/>
</LinearLayout>
